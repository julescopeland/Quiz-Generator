<% form_for(@question) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question, :rows => '5' %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_area :answer, :rows => '5' %>
  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %>