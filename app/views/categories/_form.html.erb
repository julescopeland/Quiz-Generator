<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
	<p>
	    <%= f.label :parent_id, "Select Parent Category if necessary" %><br />
	    <%= f.collection_select :parent_id, Category.all(:order => "name"), :id, :name, :include_blank => true, :prompt => "Select Parent Category" %>
	  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %>